<p id="notice"><%= notice %></p>

<h1>Products</h1>
<%= link_to 'New Product', new_product_path, id: 'link2' %>
<%= link_to 'Export as CSV', export_as_csv_path(format: 'csv'), id: 'link1' %>

<div class="paginate">
    <%= will_paginate @products %>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each_with_index do |product, index| %>
      <tr>
        <td><%= index.to_i + 1 %></td>
        <td><%= link_to product.name, product %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="paginate">
    <%= will_paginate @products %>
</div>
<br>


<style>
  .paginate {
    color: red;
  }
  #link1, #link2 {
    color: green;
  }
</style>
